package  {		import flash.display.MovieClip;	import flash.events.*;		public class Bala extends MovieClip{		public var velocidadeBala:int = 20;		private var anguloBala:Number = 0;				public function Bala(angulo:Number) {			anguloBala = angulo;			addEventListener(Event.ENTER_FRAME,moveBala);		}				private function moveBala(event:Event) {			if (this.y > 0 && this.y < 400 && this.x > 0 && this.x < 550 ) {				var radianos:Number=(anguloBala-90)*(Math.PI/180);				var xVel=Math.cos(radianos)*velocidadeBala;				var yVel=Math.sin(radianos)*velocidadeBala;				this.x +=xVel;				this.y +=yVel;			} else {				var raiz:MovieClip = MovieClip(parent);				var posicaoBala:int = raiz.nave.naveBalas.indexOf(this);				raiz.nave.naveBalas.splice(posicaoBala,1);				removeEventListener(Event.ENTER_FRAME,moveBala);				parent.removeChild(this);			}		}				}}