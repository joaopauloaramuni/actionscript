package  {		import flash.display.Loader;	import flash.display.MovieClip;	import flash.events.*;	import flash.net.*;		public class carregaSWF extends MovieClip {		//CRIA UMA INSTÂNCIA DA CLASSE LOADER		private var swfLoader = new Loader();		//CRIA UMA INSTÂNCIA DA CLASSE LOCAL CONNECTION		var conexaoLocal:LocalConnection = new LocalConnection();		//VARIÁVEL QUE CONTÉM O CONTEÚDO A SER ENVIADO		var conteudo:String = "Bla Bla Bla Bla"		public function carregaSWF() {			//CARREGA "recebeDados.swf" PELO MÉTODO LOAD DA CLASSE LOADER			swfLoader.load(new URLRequest("recebeDados.swf"));			//EXIBE O SWF CARREGADO			addChild(swfLoader);			//ADICIONA BOTAO COMO OUVINTE DE EVENTO PARA CHAMAR A FUNÇÃO NO OUTRO SWF			bt_enviar.addEventListener(MouseEvent.MOUSE_UP, enviaDados);			//ADICIONA BOTAO COMO OUVINTE DE EVENTO PARA CHAMAR A FUNÇÃO QUE FECHA OUTRO SWF			bt_fechar.addEventListener(MouseEvent.MOUSE_UP, fechar);		}				public function enviaDados (evt:MouseEvent):void {			//PELA CONEXÃO CRIADA, CHAMA A FUNÇÃO PASSANDO O CONTEÚDO			conexaoLocal.send("conexao_1", "exibeConteudo", conteudo)			//*1o. parâmetro = nome da conexão			//*2o. parâmetro = nome da função a ser executada no swf carregado			//*3o. parâmetro = conteúdo a ser transferido (é o parâmetro que a função está esperando)		}				public function fechar (evt:MouseEvent):void {			removeChild(swfLoader);		}	}	}