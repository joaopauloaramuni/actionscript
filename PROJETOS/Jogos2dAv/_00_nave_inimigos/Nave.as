package  {		import flash.display.MovieClip;	import flash.events.*;		public class Nave extends MovieClip {		public var teclaDir:Number = 0;		public var teclaEsq:Number = 0;		public var teclaUp:Number = 0;		public var teclaDown:Number = 0;		public var teclaEspaco:Number = 0;		public var teclaX:Number = 0;		public var teclaZ:Number = 0;		public var vidas:Number = 3;		public var deslocamento = 10;				public function Nave() {		this.x = 275;		this.y = 340;		this.scaleX = 0.5;		this.scaleY = 0.5;		}		public function controles() {			stage.addEventListener(Event.ENTER_FRAME,testaTeclado);			stage.addEventListener(KeyboardEvent.KEY_DOWN,apertaTecla);			stage.addEventListener(KeyboardEvent.KEY_UP,soltaTecla);		}		public function apertaTecla(event:KeyboardEvent) {						//trace(event.keyCode)			if (event.keyCode == 37) {				teclaEsq = 1;			}			if (event.keyCode == 39) {				teclaDir = 1;			}			if (event.keyCode == 38) {				teclaUp = 1;			} 			if (event.keyCode == 40) {				teclaDown = 1;			}			if (event.keyCode == 32) {				teclaEspaco = 1 ;			} 			if (event.keyCode == 88) {				teclaX = 1;			} 			if (event.keyCode == 90) {				teclaZ = 1;			} 		}		public function soltaTecla(event:KeyboardEvent) {			if (event.keyCode == 37) {				teclaEsq = 0;			}			if (event.keyCode == 39) {				teclaDir = 0;			} 						if (event.keyCode == 38) {				teclaUp = 0;			}			if (event.keyCode == 40) {				teclaDown = 0;			}			if (event.keyCode == 32) {				teclaEspaco = 0 ;			}			if (event.keyCode == 88) {				teclaX = 0;			} 			if (event.keyCode == 90) {				teclaZ = 0;			} 		}		public function testaTeclado(event:Event) {						if (teclaDir == 1 && this.x < 550) {				this.x += 10;			}			if (teclaEsq == 1 && this.x > 0) {				this.x -= 10;			}			if (teclaUp == 1 && this.y > 0) {				this.y -= 10			}			if (teclaDown == 1 && this.y < 400) {				this.y += 10			}			if (teclaEspaco == 1) {				atiraNave();				teclaEspaco = 0 //permite um tiro de cada vez			}			if (teclaX == 1) {				this.rotation += 10;			}			if (teclaZ == 1) {				this.rotation -= 10;			}		}		public function atiraNave() {			var bala:Bala = new Bala(this.rotation)			bala.rotation = this.rotation			bala.x=this.x + Math.cos(((this.rotation)-90)*Math.PI/180)*36			bala.y=this.y + Math.sin(((this.rotation)-90)*Math.PI/180)*36			MovieClip(parent).addChild(bala);			MovieClip(parent).balasNave.push(bala);		}	}	}