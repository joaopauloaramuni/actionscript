package  {	import flash.display.MovieClip;	import flash.events.*;	import flash.utils.getTimer;		public class Inimigo extends MovieClip{		public var lastTime:Number = 0;		public var timeDiff:Number = 0;		public var angulo:Number;		public var velocidadeInimigo:Number;		public var escudoInimigo:Number = 1;					public function Inimigo(vI:Number=6) {			velocidadeInimigo = vI			this.x = Math.random()*550			this.y = 40			this.addEventListener(Event.ENTER_FRAME,moveInimigo);		}		private function moveInimigo(event:Event) {			if (this.y < stage.stageHeight) {				this.y += velocidadeInimigo				} else {					this.y = 0;					this.x = Math.random()*stage.stageWidth					}			var distX: Number = this.x-MovieClip(parent).nave.x			var distY: Number = this.y-MovieClip(parent).nave.y			var angulo_rad:Number = Math.atan2(distY,distX)			angulo = angulo_rad * 180/Math.PI - 90			this.rotation = angulo			temporizaTiro()		}		private function temporizaTiro() {			if (lastTime == 0) {lastTime = getTimer()};			timeDiff = getTimer()-lastTime;			if(timeDiff > 1000){lastTime += timeDiff;atiraInimigo()}		}		private function atiraInimigo() {						var bala:Bala = new Bala(angulo)			bala.x = this.x			bala.y = this.y			bala.rotation = angulo			MovieClip(parent).addChild(bala);			MovieClip(parent).balasInimigo.push(bala)		}	}}