package  {	import flash.display.MovieClip;	import flash.events.Event;	import flash.events.KeyboardEvent;		public class carro extends MovieClip {		public var teclaDireita:Boolean = false;		public var teclaEsquerda:Boolean = false;		public var teclaCima:Boolean = false;		public var teclaBaixo:Boolean = false;		public var deslocamento:Number = 10;		public var colidiuAEsquerda = 0		public var colidiuADireita = 0		public var colidiuACima = 0		public var colidiuABaixo = 0		public var margem_esq = 0		public var margem_dir = 0		public var margem_sup = 0		public var margem_inf = 0		public var dist = 5				public function carro() {			this.x = 50;			this.y = 50;		}				public function controles(){			stage.addEventListener(KeyboardEvent.KEY_DOWN, pressionar);			stage.addEventListener(KeyboardEvent.KEY_UP, soltar);			stage.addEventListener(Event.ENTER_FRAME, testa_tecla);		}				public function pressionar(event:KeyboardEvent){			if(event.keyCode == 37){				teclaEsquerda = true;			}						if(event.keyCode == 39){				teclaDireita = true;			}						if(event.keyCode == 38){				teclaCima = true;			}						if(event.keyCode == 40){				teclaBaixo = true;			}		}				public function soltar(event:KeyboardEvent){			if(event.keyCode == 37){				teclaEsquerda = false;			}						if(event.keyCode == 39){				teclaDireita = false;			}						if(event.keyCode == 38){				teclaCima = false;			}						if(event.keyCode == 40){				teclaBaixo = false;			}		}				public function testa_tecla(evt:Event){						colidiuADireita = 0			colidiuAEsquerda = 0			colidiuACima = 0			colidiuABaixo = 0						for (var i:Number=0; i<MovieClip(parent).barreiras.length; i++){							margem_dir=MovieClip(parent).barreiras[i].margem_dir + this.width/2				margem_esq=MovieClip(parent).barreiras[i].margem_esq - this.width/2				margem_sup=MovieClip(parent).barreiras[i].margem_sup - this.width/2				margem_inf=MovieClip(parent).barreiras[i].margem_inf + this.width/2							if (MovieClip(parent).barreiras[i].objeto.hitTestObject(this)){					if(this.x + dist > margem_dir && this.y > margem_sup && this.y < margem_inf) {colidiuAEsquerda = 1}					if(this.x - dist < margem_esq && this.y > margem_sup && this.y < margem_inf) {colidiuADireita = 1}					if(this.y - dist < margem_sup && this.x > margem_esq && this.x < margem_dir) {colidiuABaixo = 1}					if(this.y + dist > margem_inf && this.x > margem_esq && this.x < margem_dir) {colidiuACima = 1}					}				}								if(teclaEsquerda && this.x >= 0 && !colidiuAEsquerda){					this.x -= dist;					}							if(teclaDireita && this.x <= 400 && !colidiuADireita){					this.x += dist;					}							if(teclaCima && this.y >= 0 && !colidiuACima){					this.y -= dist;					}							if(teclaBaixo && this.y <= 400 && !colidiuABaixo){					this.y += dist;					}				}	}	}